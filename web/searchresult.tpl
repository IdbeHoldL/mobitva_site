[searchposts]
[fullresult]
          <div class="articleheader">
		  <h2>{result-title}</h2>
		  <p>Автор: {result-author} &nbsp;&nbsp;&nbsp; {result-date} &nbsp;&nbsp;&nbsp; Категория: {link-category}</p>
          </div>	
          <div class="articlecontent">
		  {result-text}
          </div>		  
		  <div class="articlebottom">
		   <p class="article-views-comments"><span class="violet">Комментарии: </span>&nbsp;{result-comments} &nbsp;&nbsp;<span class="violet">Просмотров: </span>&nbsp;{views}</p>   <p class="article-actions">[edit] Редактировать [/edit]  [result-link]Подробнее[/result-link] </p>
		  </div>
[/fullresult]
