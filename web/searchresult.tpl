[/searchposts]
[searchcomments]
[fullresult]
	<div class="clear"></div>
    <div class="comments">
     <div class="com-top">
      <div class="com-bottom">
	   <div class="com-left">
        <img class="avatar" src="{foto}" alt="" />
        <p>{result-author}</p>
        <p>{result-date}</p>
        <p>ICQ: {icq}</p>
        <p>[fast] Цитировать [/fast]</p>
        <p>[com-edit] Редактировать [/com-edit]</p>
        <p>[com-del] Удалить [/com-del]</p>
	   </div>
	   <div class="comment">
	    {result-text}
		[signature]<br /><br />--------------------<br />{signature}[/signature]
	   </div>
    </div>
</div>
<p class="userinfo"><span class="violet">Зарегистрировался:</span> {registration} &nbsp;<span class="violet">Комментариев:</span> {result-comments}</p>
</div>	
[/fullresult]
